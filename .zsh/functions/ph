local rev_hist
case $OSTYPE in
  linux*)
    rev_hist="history -n 1 | tac"
    ;;
  darwin*)
    rev_hist="history -n -r 1"
    ;;
esac

if zle; then # called as widget
  BUFFER=$(eval $rev_hist | awk '!a[$0]++' | peco --prompt="HISTORY> " --query="$LBUFFER")
  zle accept-line
  zle redisplay
else
  cmd=$(eval $rev_hist | awk '!a[$0]++' | peco --prompt="HISTORY> " --query="$@")
  eval $cmd
fi
